#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use Rampmaster\EPub\Console\Command\EpubCheckVersionCommand;
use Rampmaster\EPub\Console\Command\EpubCheckValidateCommand;

$application = new Application('phpepub console');
$application->addCommand(new EpubCheckValidateCommand());
$application->addCommand(new EpubCheckVersionCommand());
$application->setDefaultCommand('list');
try {
    $application->run();
} catch (\Throwable $e) {
    fwrite(STDERR, $e->getMessage() . PHP_EOL);
    exit(1);
}
