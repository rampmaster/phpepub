{
  "name": "rampmaster/phpepub",
  "type": "library",
  "description": "Package to create and stream e-books in the ePub 2.0 and 3.0 formats.",
  "keywords": [
    "epub",
    "e-book"
  ],
  "homepage": "https://github.com/rampmaster/phpepub",
  "license": "LGPL-2.1",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "A. Grandt",
      "email": "php@grandt.com",
      "homepage": "https://grandt.com",
      "role": "Developer"
    },
    {
      "name": "Roberto Moreno",
      "email": "rampmaster@gmail.com",
      "homepage": "https://rampmaster.dev",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-dom": "*",
    "ext-zip": "*",
    "symfony/uid": "^7.4",
    "symfony/console": "^7.4",
    "symfony/filesystem": "^7.4",
    "symfony/process": "^7.4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.7",
    "slevomat/coding-standard": "^8.12",
    "phpunit/phpunit": "^10.1",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Rampmaster\\EPub\\": "src",
      "Rampmaster\\EPub\\Test\\": "tests"
    },
    "classmap": [
      "classmap/BinStringStatic.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "phpcs": "phpcs -s",
    "phpstan": "phpstan",
    "epubcheck:version": "php bin/console epubcheck:version",
    "epubcheck:validate": "php bin/console epubcheck:validate",
    "test": "phpunit",
    "ci": [
      "@phpcs",
      "@phpstan",
      "@test"
    ]
  },
  "scripts-descriptions": {
    "phpcs": "Run PHP Code Sniffer",
    "phpstan": "Run PHPStan (with Larastan extension)",
    "epubcheck:version": "Print epubcheck version (java -jar epubcheck/epubcheck.jar or system binary)",
    "epubcheck:validate": "Validate EPUB_FILE env var using system epubcheck",
    "test": "Run the PHPUnit tests",
    "ci": "Run all CI tests"
  }
}
